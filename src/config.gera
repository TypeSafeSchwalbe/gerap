
mod gerap::config

use std::(env, opt)

pub proc get_gerac_path() {
    return env::get_var("GERAP_GERAC_PATH")
        |> opt::unwrap_or("gerac")
}

pub proc get_git_path() {
    return env::get_var("GERAP_GIT_PATH")
        |> opt::unwrap_or("git")
}

pub proc get_cc_path() {
    return env::get_var("GERAP_CC_PATH")
        |> opt::unwrap_or("cc")
}